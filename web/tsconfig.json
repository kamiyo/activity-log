{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es6",
        "jsx": "react",
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "Node",
        "incremental": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "typeRoots": [
            "../node_modules/@types",
            "../@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "../node_modules"
    ]
}